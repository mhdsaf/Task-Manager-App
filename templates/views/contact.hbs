<body>
    <div class="container">
        <h1 class="display-4 intro text-center">Customer Support</h1><br><br>
        <div class="row">
          <div class="col-lg-5">
            <div class="row-sm-8">
                
                    <div class="form-group">
                        <input class="form-control" type="text" id="name" name="name" placeholder="Enter name" required>
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="email" id="email" name="email" placeholder="Email" required>
                    </div>
                    <textarea class="form-control" id="msg" name="message" placeholder="Message" rows="3" style="resize: none;" required></textarea><br>
                    <div class="form-group">
                        <input class="form-control btn btn-danger" type="submit" value="Send Message" id="submitt">
                    </div>
                    <div class="alert alert-success" id="alert">
                        <strong id="sent"></strong>
                    </div>
                    <div class="alert alert-danger" id="alert1">
                        <strong id="sent1"></strong>
                    </div>
            </div>
          </div>
          <div class="col-lg-2">

          </div>
          <div class="col-sm-12 col-lg-5">
            <img src="img/email.png" alt="Email" class="expimg">
          </div>
          
        </div>
    </div>
    <script>
        $("#alert").hide();
        $("#alert1").hide();
        $("#submitt").click(()=>{
            event.preventDefault();
            let name = $("#name").val();
            let email = $("#email").val();
            let message = $("#msg").val();
            const re = /^(([^<>()\[\]\\.,;:\s@"]+(\.[^<>()\[\]\\.,;:\s@"]+)*)|(".+"))@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/;
            if(name!="" && email!="" && message!=""){
                if(re.test(email)){
                    fetch('/customersupport',{
                    method: 'POST',
                    headers: {
                        'Accept': 'application/json',
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({name: name, email: email, message: message})
                    });
                    console.log("fetching");
                    $("#alert").show();
                    $("#sent").html("Email Sent!")
                }else{
                    $("#alert1").show();
                    $("#sent1").html("Invalid Input");
                }
            }else{
                console.log("asd");
                $("#alert1").show();
                $("#sent1").html("Invalid Input");
            }
        });
    </script>
